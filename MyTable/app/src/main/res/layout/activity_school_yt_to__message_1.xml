<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/re01"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorLan">
        <LinearLayout
            android:id="@+id/iBack"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorLan"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/school_msg_to_left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="消息平台"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/add"
            android:layout_width="32dp"
            android:layout_height="29dp"
            android:src="@mipmap/cc_new_msg"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/re02"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/re01"
        android:gravity="center_vertical">
        <RadioGroup
            android:id="@+id/rGoup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已收"
                android:button="@null"
                android:textSize="20sp"
                android:layout_below="@+id/iBack"
                android:textColor="@color/title_selector3"
                android:layout_weight="1"
                android:gravity="center"/>
            <!--android:background="@drawable/school_yt_message_shape"-->
            <RadioButton
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已发"
                android:button="@null"
                android:textSize="20sp"
                android:layout_below="@+id/iBack"
                android:layout_toRightOf="@+id/collect"
                android:textColor="@color/title_selector3"
                android:layout_weight="1"
                android:gravity="center"/>
        </RadioGroup>
        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="@color/colorGrays"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </View>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrays"
        android:layout_below="@+id/re02">
    </View>
</RelativeLayout>
