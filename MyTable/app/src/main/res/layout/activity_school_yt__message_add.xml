<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mytable.School.School_yt_MessageAdd">
    <FrameLayout
        android:id="@+id/re01"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorLan">
        <LinearLayout
            android:id="@+id/iBack"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorLan"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/school_msg_to_left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="新建消息"
                android:textColor="#ffff"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/add"
            android:layout_width="32dp"
            android:layout_height="29dp"
            android:src="@mipmap/cc_org_contact"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re01">
        <EditText
            android:id="@+id/edit01"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="请输入姓名...."
            android:layout_marginLeft="10dp"
            android:paddingTop="15dp" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/search"
            android:layout_toRightOf="@+id/edit01"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   </RelativeLayout>
    <EditText
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:background="@drawable/school_yt_login_shape"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:hint="请输入..."
        android:paddingLeft="20sp"
        android:textColorHint="@color/colorGrays" />
    <Button
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:text="发送"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_shape"/>


</RelativeLayout>
