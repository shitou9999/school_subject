<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/iBack"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorLan"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/school_msg_to_left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="设置"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorGrays">
    </View>
    <RelativeLayout
        android:id="@+id/toSeeInformation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">
        <com.example.administrator.mytable.School.CircleImageView
            android:id="@+id/image01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/cc_default_head"/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是用户名"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toRightOf="@+id/image01"
            android:layout_toEndOf="@+id/image01" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是姓名"
            android:layout_above="@+id/imageView"
            android:layout_alignLeft="@+id/userName"
            android:layout_alignStart="@+id/userName" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="28dp"
            android:src="@mipmap/im_list_item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/imageView" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorGrays">
    </View>
    <RelativeLayout
        android:id="@+id/toChangePassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码修改"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/im_list_item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrays">
    </View>
    <RelativeLayout
        android:id="@+id/toPersonalCollection"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人收藏"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/im_list_item_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrays">
    </View>
    <RelativeLayout
        android:id="@+id/toCheckVersion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:onClick="updataDialog"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本检测"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrays">
    </View>
    <RelativeLayout
        android:id="@+id/toAutoLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动登录"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <CheckBox
            android:id="@+id/autoLogin"
            android:layout_width="55dp"
            android:layout_height="28dp"
            android:button="@null"
            android:background="@drawable/school_yt_login_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/exitLogin"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="退出"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/school_yt_login_shapess"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="exitLoginDialog"/>
</LinearLayout>
